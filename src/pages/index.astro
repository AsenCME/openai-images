---
import Layout from '../layouts/Layout.astro';
import TodaySummary from "../components/TodaySummary.tsx";
import Add from "../components/Add.tsx";

import { getClient, getToday } from "../db";
const client = await getClient(import.meta.env.SUPABASE_KEY);
const today = await getToday(client);
---

<Layout title="Expenses">
	<Add client:load/>
    <TodaySummary data={today}/>
</Layout>
